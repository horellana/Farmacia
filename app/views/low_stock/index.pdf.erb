<div class="panel panel-default">
<style>
table {
    border-collapse: collapse;
    width: 100%;
    height: 50px;
}
table, th, td {
  border: 1px solid black;
  font-family: "Times New Roman", Times, serif;
}
th{
    font-size: 14px;
    height: 50px;
    background-color: #A9A9A9;
}
tr{
  page-break-inside: avoid;
}
td{
  font-size: 12px;
  text-align: left;
  vertical-align: bottom;
}
</style>
  <div class="panel-heading">
    Reporte stock bajo
  </div>

  <table class="table">
    <thead>
      <th>
	Producto
      </th>

      <th>
	Principio activo
      </th>

      <th>
	Stock Actual
      </th>

      <th>
	Stock minimo
      </th>

      <th>
  Precio compra
      </th>
    </thead>
    <tbody>
      <% @products.each do |ls| %>
      <tr>
	<td>
	  <%= ls.name %>
	</td>

	<td>
	  <%= ls.principles.first.name %>
	</td>

	<td>
	  <%= ls.stock %>
	</td>

	<td>
	  <%= ls.minimum_stock %>
	</td>

	<td>
	  <%= ls.purchase_price %>
	</td>

      <%end%>
    </tr>
    </tbody>
  </table>
</div>
