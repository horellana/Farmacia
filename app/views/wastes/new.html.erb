<%= render 'partials/shared/list_errors', object: @waste %>

<div class="panel panel-default">

  <div class="panel-heading">
    Crear Merma
  </div>


  <div class="panel-body">
    <%= form_for @waste do |f| %>
	<div class="panel-group">
	  <div class="panel panel-default">
	    <div class="panel-body">

	      <p>
		<%= f.label :amount %><br>
		<%= f.number_field :amount %>
	      </p>

	      <p>
		<%= f.label :description %><br>
		<%= f.text_field :description %>
	      </p>


	      <p>
		<%= f.label :motive %><br>
		<%= f.text_field :motive %>
	      </p>

	    <p>
	      <%= f.label :date %><br>
	      <%= f.datetime_field :date %>
	    </p>

	    <%= f.fields_for :inventory do |ff| %>
	      <p>
		<%= label_tag :stock %>
		<br>
		<%= ff.number_field :stock %>
	      </p>

	    <% end %>

      </div>
    </div>
  </div>


      <p>
	<%= f.submit %>
      </p>
  </div>

</div>
    <% end %>
