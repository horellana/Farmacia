<% if @medicinal_ingredient.errors.any? %>
  <div class="alert alert-danger">
    <%= pluralize(@medicinal_ingredient.errors.count, "errors") %>

    <ul>
      <% @medicinal_ingredient.errors.full_messages.each do |message| %>
	<li>
	  <%= message %>
	</li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Modificar Principio Activo</h1>

<%= form_for(@medicinal_ingredient) do |f| %>

  <p>
    <%= f.label :nombre %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Atras', medicinal_ingredients_path %>
