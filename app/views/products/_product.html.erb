<tr>
  <td>
    <%= product.code %>
  </td>

  <td>
    <%= product.name %>
  </td>

  <td>
    <%= product.category.description %>
  </td>

  <td>
    <%= product.be %>
  </td>

  <td>
    <%= product.principle.name %>
  </td>

  <td>
    <%= product.isp %>
  </td>

  <td>
    $ <%= product.purchase_price %>
  </td>

  <td>
    $ <%= product.sale_price %>
  </td>

  <td>
    $ <%= product.discount %>
  </td>

  <td>
    $ <%= product.profit %>
  </td>

  <td>
    <%= form_tag(cart_path(@cart), method: 'put', remote: true) do %>
      <%= hidden_field_tag(:search_product_field, product.name) %>
      <%= button_tag '', type: 'submit', class: 'glyphicon glyphicon-ok' %>
    <% end %>
  </td>
</tr>
