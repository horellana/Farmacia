<% if @product.errors.any? %>
  <div class="alert alert-danger">
    <%= pluralize(@product.errors.count, "errors") %>

    <ul>
      <% @product.errors.full_messages.each do |message| %>
	<li>
	  <%= message %>
	</li>
      <% end %>
    </ul>
  </div>
<% end %>


