<div class="panel panel-default">

<style>
table {
    border-collapse: collapse;
    width: 100%;
    height: 50px;
}
table, th, td {
  border: 1px solid black;
  font-family: "Times New Roman", Times, serif;
}
th{
    font-size: 14px;
    height: 50px;
    background-color: #A9A9A9;
}
tr{
  page-break-inside: avoid;
}
td{
  font-size: 12px;
  text-align: left;
  vertical-align: bottom;
}
</style>
  <div class="panel-heading">
    Inventario
  </div>
  <table class="table">
    <thead>
      <th>
 Codigo
      </th>

      <th>
	Nombre
      </th>

      <th>
	Laboratorio
      </th>

      <th>
        Presentacion
      </th>

      <th>
  Precio Venta
      </th>

      <th>
  Cantidad
      </th>

      <th>
  Total Inventario
      </th>

      <th>
  ISP
      </th>

      <th>
  BE
      </th>
    </thead>
    <tbody>

      <% @inventories.each do |inv| %>
      <tr>
        <td>
        <%=  inv.product.code %>
        </td>

        <td>
        <%=  inv.product.name %>
        </td>

       <td>
        <%= inv.product.laboratory.name %>
        </td>

        <td>
      <%=    inv.product.presentation.name %>
        </td>

        <td>
        <%=  inv.product.sale_price %>
        </td>

        <td>
          <%= inv.stock %>
        </td>

        <td>
          <%= inv.total %>
        </td>

        <td>
        <%=  inv.product.isp %>
        </td>

        <td>
          <% if inv.product.be %>
          Si
          <% else %>
          No
          <% end %>
        </td>

      <%end%>
    </tr>
  </tbody>

  </table>

</div>
