<!DOCTYPE html>
<html>
  <head>
    <title>
      Farmacia
    </title>

    <link rel="shortcut icon" href="/images/favicon.png">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-default navbar-fixed-top navbar-collapse">
      <div class="navbar-brand">
	<%= link_to 'Farmacia', root_path %>
      </div>

      <div class="navbar-left">
	<ul class="nav navbar-nav">
	  <% if user_signed_in? %>

	    <li>
	      <%= link_to 'Venta', new_cart_path %>
	    </li>


	    <li role="presentation" class="dropdown">
	      <a class="dropdown-toggle" data-toggle="dropdown" role="button"  href="#">
		Productos
	      </a>
	      <ul class="dropdown-menu multi-level" role="menu" aria-labelledby="dropdownMenu">
		<% if current_user.admin? %>
		  <li>
		    <%= link_to 'Crear producto', new_product_path %>
		  </li>
		<% end %>

		<li>
		  <%= link_to 'Buscar Producto', products_path %>
		</li>

		<% if current_user.admin? %>
		  <li>
		    <%= link_to 'Editar Producto', '#' %>
		  </li>
		<% end %>

		<li class="divider"></li>

		<% if current_user.admin? %>
		  <li> <%= link_to 'Crear Principio activo', new_medicinal_ingredient_path %>   </li>
		<% end %>
		<li> <%= link_to 'Buscar Principio activo', medicinal_ingredients_path %>   </li>

		<li class="divider"></li>
		<% if current_user.admin? %>
		  <li> <%= link_to 'Crear Categoria', new_category_path %>   </li>
		<% end %>
		<li> <%= link_to 'Buscar Categoria', categories_path %>   </li>

		<li class="divider"></li>
		<% if current_user.admin? %>
		  <li> <%= link_to 'Crear Dosis', new_dose_path %>   </li>
		<% end %>
		<li> <%= link_to 'Buscar Dosis', doses_path %>   </li>


	    </li>
	      </ul>
    </li>


    </li>

    <li role="presentation" class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" role="button"  href="#">
	Proveedor
      </a>
      <ul class="dropdown-menu">
	<% if current_user.admin? %>
	<li> <%= link_to 'Crear proveedor', new_provider_path %>   </li>
	<% end %>
	<li> <%= link_to 'Buscar proveedor', providers_path %>   </li>
      </ul>
    </li>

    <li role="presentation" class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown" role="button"  href="#"> Clientes	</a>
      <ul class="dropdown-menu">
	<li> <%= link_to 'Crear cliente', new_client_path %>   </li>
	<li> <%= link_to 'Buscar cliente', clients_path %>   </li>

      </ul>
    </li>

    <li>
      <% if box_open? %>
	<%= link_to 'Cerrar Caja', box_movement_path(current_box_movement) %>
      <% else %>
	<%= link_to 'Abrir Caja', new_box_movement_path %>
      <% end %>
    </li>

    <!--
	 <li> <%= link_to 'Inventario','#'  %>   </li>
	 <li> <%= link_to 'Merma', '#' %>   </li>
	 <li> <%= link_to 'Lista z del dia', '#'  %>   </li>
	 <li> <%= link_to 'Historico precios',   '#'%>   </li>
	 <li> <%= link_to 'Historico proveedores', '#' %>   </li>
	 </ul>
	 </li>
       -->

	  <% end %>
	</ul>
	</ul>
      </div>

      <div class="navbar-right">
	<ul class="nav navbar-nav">
	  <% if user_signed_in? %>
	    <li role="presentation" class="dropdown">
	      <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button"
		 <%= link_to current_user.rut, user_path(current_user) %>
	      </a>

	      <ul class="dropdown-menu">
		<li>
		  <%= link_to 'Perfil', user_path(current_user) %>
		  <%#= link_to 'Perfil', edit_user_registration_path(current_user) %>
		</li>


		<li role="separator" class="divider">
		</li>

		<li>
		  <%= link_to 'Cerrar sesion', destroy_user_session_path, method: :delete %>
		</li>
	      </ul>
	    </li>
	  <% else %>
	    <li>
	      <%= link_to 'Iniciar sesion', new_user_session_path %>
	    </li>
	  <% end %>
	</ul>
      </div>
    </div>

    <div class="container">
      <% if notice %>
	<div class="alert alert-success">
	  <%= notice %>
	</div>
      <% end %>

      <% if alert %>
	<div class="alert alert-danger">
	  <%= alert %>
	</div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
