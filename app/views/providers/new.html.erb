<%= render 'partials/shared/list_errors', object: @provider %>

<div class="panel panel-default">

  <div class="panel-heading">
    Crear Proveedor
  </div>

  <div class="panel-body">
    <%= form_for @provider do |f| %>
      <div class="row">

	<div class="col-md-4">
	  <p>
	    <%= f.label :nombre %><br>
	    <%= f.text_field :name %>
	  </p>
	  <p>
	    <%= f.label :rut %><br>
	    <%= f.text_field :rut %>
	  </p>
	  <p>
	    <%= f.label :Razon_social %><br>
	    <%= f.text_field :business_name %>
	  </p>
	  <p>
	    <%= f.label :direccion %><br>
	    <%= f.text_field :address %>
	  </p>
	  <p>
	    <%= f.label :fono_1 %><br>
	    <%= f.text_field :phone_one %>
	  </p>
	  <p>
	    <%= f.label :fono_2 %><br>
	    <%= f.text_field :phone_two %>
	  </p>


	</div>

	<div class="col-md-4">


	  <p>
	    <%= f.label :email %><br>
	    <%= f.text_field :email %>
	  </p>

	  <p>
	    <%= f.label :web %><br>
	    <%= f.text_field :web %>
	  </p>

	  <p>
	    <%= f.label :observacion %> <br>
	    <%= f.text_area :observation %>
	  </p>

	  <p>
	    <%= f.submit %>
	  </p>
	</div>
	<p>


      </div>

  </div>
    <% end %>
</div>
