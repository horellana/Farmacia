<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box text-left">
      <h2> Registrarse </h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<%= devise_error_messages! %>

	<div class= "field">
	  <%= f.label :name, "Rut" %><br />
	  <%= f.text_field :rut, autofocus: true, class:"form-control" %>
	</div>

	<div class="field">
	  <%= f.label :password, "ContraseÃ±a *" %>
	  <% if @validatable %>
	    <em>(<%= @minimum_password_length %> Minimo 8 caracteres)</em>
	  <% end %></br>
	  <%= f.password_field :password, autocomplete:"off", class:"form-control" %>
	</div>

	<div class="field">
	  <%= f.label :password_confirmation, "Confirmar contraseÃ±a *" %><br />
	  <%= f.password_field :password_confirmation, autocomplete:"off", class:"form-control" %>
	</div>

	<br>

	<%#= select_tag(:office, options_for_select(@offices)) %>

	<div class="actions">
	  <%= f.submit "Crear usuario",class:"btn btn-default" %>
	</div>

      <% end %>

    </div>
  </div>
</div>
