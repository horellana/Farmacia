
<h1>Modificar Dosis</h1>
 
<%= form_for(@dose) do |f| %>
 
  <% if @dose.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@dose.errors.count, "error") %> prohibited
        Para Poder Modificar:
      </h2>
      <ul>
        <% @dose.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :kind %><br>
    <%= f.text_field :kind %>
  </p>
 
  <p>
    <%= f.label :quantity %><br>
    <%= f.text_area :quantity %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', doses_path %>