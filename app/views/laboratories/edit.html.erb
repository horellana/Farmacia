<% if @laboratory.errors.any? %>
  <div class="alert alert-danger">
    <%= pluralize(@laboratory.errors.count, "errors") %>

    <ul>
      <% @laboratory.errors.full_messages.each do |message| %>
	<li>
	  <%= message %>
	</li>
      <% end %>
    </ul>
  </div>
<% end %>


<h1>Modificar Laboratorio</h1>

<%= form_for(@laboratory) do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Atras', laboratories_path %>
